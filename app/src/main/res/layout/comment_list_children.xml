<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="66dp"
        tools:layout_editor_absoluteY="25dp">

        <TextView
            android:id="@+id/id_comment_list_children_floor_num"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:text="1"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_comment_list_children_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="南派三叔"
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/id_comment_list_children_floor_num"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_comment_list_children_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="江苏省南京市"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/id_comment_list_children_floor_num"
            app:layout_constraintTop_toBottomOf="@+id/id_comment_list_children_author" />

        <TextView
            android:id="@+id/id_comment_list_children_zannum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:text="123项"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_comment_list_children_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:text="iphone x"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/id_comment_list_children_addr"
            app:layout_constraintTop_toBottomOf="@+id/id_comment_list_children_author" />

        <TextView
            android:id="@+id/id_comment_list_children_publishtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:text="1分钟前"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/id_comment_list_children_phone"
            app:layout_constraintTop_toBottomOf="@+id/id_comment_list_children_author" />

        <TextView
            android:id="@+id/id_comment_list_children_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:text="枯藤老树昏鸦，小桥流水人家。枯藤老树昏鸦，小桥流水人家。枯藤老树昏鸦，小桥流水人家。"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/id_comment_list_children_floor_num"
            app:layout_constraintTop_toBottomOf="@+id/id_comment_list_children_addr" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>